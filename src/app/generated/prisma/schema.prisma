generator client {
  provider = "prisma-client-js"
  output   = "../src/app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Poem {
  id      String   @id @default(cuid())
  title   String
  version String // "junior" or "senior"
  tags    String[]
  author  String
  dynasty String
  mode    String // "poem" or "paragraph"
  content String

  @@map("poems")
}
